@model People

@{
    ViewData["Title"] = "Detail";
}

<h1>People Details</h1>

<div>
    <h4>People</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Id
        </dt>
        <dd class = "col-sm-10">
           @Model.Id
        </dd>
        <dt class = "col-sm-2">
           Name
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
           Address
        </dt>
        <dd class = "col-sm-10">
            @Model.Address
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
